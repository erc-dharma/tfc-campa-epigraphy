                 <rdg source="Huber1911_02">nijitavataḥ<g type="dandaPlain">.</g></rdg>
             </app>
             <app loc="A13">
                 <lem>-d<choice><sic>i</sic><corr>u</corr></choice>ndubhitāṁ</lem>
                 <rdg source="Huber1911_02">dindubhitām</rdg>
             </app>
             <app loc="A14">
                 <lem>-kulitāntāḥ<g type="ddandaPlain">.</g> deśāntarā-</lem>
                 <rdg source="Huber1911_02">-kulitāntāḥ<g type="dandaPlain">.</g> deśāntarā-</rdg>
