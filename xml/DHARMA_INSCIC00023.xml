            <ab><lb n="01"/>śrī</ab>
<lg n="1" met="anuṣṭubh">
	<l n="a"><lb n="1"/>vikrānteśvaralokau yau</l>
	<l n="b">tayor nr̥pau sa nāyakaḥ</l>
	<l n="c"><lb n="2"/><choice><sic>samanta</sic><corr>samantaḥ</corr></choice> prathito nāmnā</l>
	<l n="d">tasya puṇyam idaṁ matam·<g type="ddanda">.</g></l>
</lg>
<lg n="2" met="anuṣṭubh">
	<l n="a" real="-+++--++"><lb n="3"/>vihārau deva-kule <subst><del>dvau</del><add place="inline">dve</add></subst></l>
	<l n="b">jina-śaṅkarayos tayoḥ<g type="ddanda">.</g></l>
	<l n="c" real="+-+++--+"><lb n="4"/>pūjanārthaṁ prakurute</l><!-- bha-vipulā! -->
	<l n="d">tāṅ gatiṁ pragataś śubhām·</l>
</lg>
<lg n="3" met="upajāti">
	<l n="a"><lb n="5"/>humā tavov· saṁgaṇitas tu pātpluḥ</l>
	<l n="b">kṣetran tu khāryyāḥ daśamastāṅke</l>
	<l n="c"><lb n="6"/>paratra bhūrīcchati bhogam āryyaṁ</l>
	<l n="d">prādāj jināyaiva manaś-śubhena</l>
</lg>
<lg n="4" met="anuṣṭubh">
	<l n="a"><lb n="7"/>samanta-putras sthaviraḥ</l>
	<l n="b">buddhanirvvāṇa-saṁjñakaḥ</l>
</lg>
<p xml:lang="x-oldcham-Latn"><lb n="8"/>humā pralauṅ·<g type="ddanda">.</g> humā padaiṅ·<g type="ddanda">.</g> ney· śaka vanuḥ humā dvā nan·
<lb n="9"/> <num value="751">751</num><g type="ddanda">.</g>
<lb n="10"/>yāṅ· maṇḍara di parvvata<g type="ddanda">.</g>
<lb n="11"/>vihāra devarakṣa di krauṅ·<g type="ddanda">.</g>
<lb n="12"/>yāṅ· praṇaveśvara di mandauḥ<g type="ddanda">.</g>
<lb n="13"/>vihāra ney· Avista nan· sā pu
<lb n="14"/>pov· puṇya<g type="ddanda">.</g></p>
<lg n="4" met="anuṣṭubh">
	<l n="c"><lb n="15"/>@ kāvyasya karaṇañ cakre</l>
	<l n="d"><lb n="16"/>jñātaye bhūtale nr̥ṇām·<g type="ddanda">.</g></l>
</lg>
