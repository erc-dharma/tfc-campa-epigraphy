               <lem>En· 3</lem>
               <rdg source="bib:Finot1904_01">En· 2</rdg>
           </app>
           <app loc="C4">
               <lem>sanupaḥ tra</lem>
               <rdg source="bib:Finot1904_01">sanupa<g type="danda">.</g>tra</rdg>
